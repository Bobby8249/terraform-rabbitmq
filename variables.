variable "rabbitmq_endpoint" {
    type = string
    default = "http://127.0.0.1:8080"
  
}
variable "user_name" {
    type = string
    default = "guest"
}

variable "vhost" {
  type = string
  default = "test"
}

variable "queue_name" {
    type = string
    default = "test"
}

variable "exchange_name" {
  type = string
  default = "test"
}

variable "exchange_type" {
    type = string
    default = "direct"
  
}


variable "exchange" {
   type = map(object({
       name  = string
       type  = string
       auto_delete = bool
       durable = bool
   }))

   default = {
     "key" = {
       auto_delete = true
       durable = false
       
     }
   }
  
}

variable "test" {
  type = map(string)
  default = {
    "key" = "value"
  }
  
}